
! Macros for VSSUBACP modules
!
! Broadcast a message to the operator

MACRO
    $tell_opr (mess) =
	BEGIN
	EXTERNAL ROUTINE vsta$$sub_deb_broad;
	vsta$$sub_deb_broad (%ASCID mess)
	END
	%;

! Tell opr about the human interface's termination status

MACRO
    $tell_about_hi_status (code) =
	BEGIN
	EXTERNAL ROUTINE vsta$$sub_deb_hi_done;
	vsta$$sub_deb_hi_done (code)
	END
	%;
